        { @Html.ActionLink("Create", "SetPassword")}
        </dd>

        <dt>Profile:</dt>
        <dd>
            @Html.ActionLink("View Profile", "ViewMyProfile", "Trainer")
        </dd>
        <dt>Assigned Course:</dt>
        <dd>
            @Html.ActionLink("View Assigned Course", "AssignedCourse", "Trainer")
        </dd>


        <dt>Profile:</dt>
        <dd>
            @Html.ActionLink("View Profile", "MyProfile", "Trainee")
        </dd>
