@model App.Models.TrainerUser
@{
    ViewBag.Title = "ViewMyProfile";
}

<h2>@ViewBag.Title</h2>

<div class="form-group">
    @Html.ActionLink("Back to Home", "Index", "Home", null, new { @class = "btn btn-default" })
</div>

<div class="form-group">
    @Html.ActionLink("Update Profiles", "EditProfile", "Trainer", null, new { @class = "btn btn-success" })
</div>


<div class="panel panel-primary">
    <div class="panel-body">
        @Html.LabelFor(m => m.EmailAddress, new { @class = "col-md-2 control-label" })
        <div>
            @Html.DisplayFor(m => m.UserName)
        </div>
    </div>

    <div class="panel-body">
        @Html.LabelFor(m => m.FullName, new { @class = "col-md-2 control-label" })
        <div>
            @Html.DisplayFor(m => m.FullName)
        </div>
    </div>

    <div class="panel-body">
        @Html.LabelFor(m => m.Telephone, new { @class = "col-md-2 control-label" })
        <div>
            @Html.DisplayFor(m => m.Telephone)
        </div>
    </div>

    <div class="panel-body">
        @Html.LabelFor(m => m.WorkingPlace, new { @class = "col-md-2 control-label" })
        <div>
            @Html.DisplayFor(m => m.WorkingPlace)
        </div>
    </div>

    <div class="panel-body">
        @Html.LabelFor(m => m.type, new { @class = "col-md-2 control-label" })
        <div>
            @Html.DisplayFor(m => m.type)
        </div>
    </div>
</div>