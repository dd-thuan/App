@model IEnumerable<App.Models.Course>
@{
    ViewBag.Title = "CourseList";
}

<h2>CourseList</h2>

<h2>List Course</h2>
<div class="form-group">
    @Html.ActionLink("Back to Home", "Index", "Home",
null,
new { @class = "btn btn-primary" })
</div>
@using (Html.BeginForm("ListCourse", "TrainingStaffs", "POST"))
{
    <div class="form-group">
        <label for="fname">Search by Course Name:</label><br>
        @Html.TextBox("searchString", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
}
<div class="form-group">
    @Html.ActionLink("Create New Course", "CreateCourse", "Staff", null, new { @class = "btn btn-primary" })
</div>

<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>Course Name</th>
            <th>Category Name</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category.Name</td>
                <td>
           
                </td>

            </tr>
        }
    </tbody>
</table>
