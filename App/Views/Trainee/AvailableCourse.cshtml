@model IEnumerable<App.Models.Course>
@{
    ViewBag.Title = "AvailableCourse";
}

<h2>AvailableCourse</h2>

<div class="form-group">
    @Html.ActionLink("Back to Home", "Index", "Home",
        null,
        new { @class = "btn btn-primary" })
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Category Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category.Name</td>
            </tr>
        }
    </tbody>
</table>